<div class="gen-container">
  <div class="gen-header">
    <p class="gen-title">Edit Post</p>
  </div>
  <div class="comment-body">
    <form class="edit-form">
      <div class="form-div">
        <label for="create-title">Title</label><br>
      </div>
      <input value="{{mypost.title}}" type="text" id="create-title" name="create-title"><br>

      <div class="form-div">
        <label id="content-label" for="content">Content</label><br>
      </div>
      <textarea id="content">{{mypost.body}}</textarea>
      <br>
      <input class="update-post" type="submit" value="Update Post">
    </form>
      <button class="delete">Delete</button>
  </div>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>